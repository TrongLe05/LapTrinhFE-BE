using TH17012026.Application.DTOs;
using TH17012026.Domain.Entities;
using TH17012026.Infrastructure.Repositories;

namespace TH17012026.Application.Services
{
    public class ClassService : IClassService
    {
        private readonly ClassRepository _classRepository;

        public ClassService(ClassRepository classRepository)
        {
            _classRepository = classRepository;
        }

        public List<ClassDto> GetAllClasses()
        {
            var classes = _classRepository.GetAll();
            return classes.Select(c => new ClassDto
            {
                Id = c.Id,
                Name = c.Name,
                Description = c.Description,
                Students = c.Students?.Select(s => new StudentDto
                {
                    Id = s.Id,
                    FullName = s.FullName,
                    Email = s.Email,
                    DateOfBirth = s.DateOfBirth,
                    ClassId = s.ClassId
                }).ToList()
            }).ToList();
        }

        public ClassDto GetClassById(int id)
        {
            var cls = _classRepository.GetById(id);
            if (cls == null) return null;

            return new ClassDto
            {
                Id = cls.Id,
                Name = cls.Name,
                Description = cls.Description,
                Students = cls.Students?.Select(s => new StudentDto
                {
                    Id = s.Id,
                    FullName = s.FullName,
                    Email = s.Email,
                    DateOfBirth = s.DateOfBirth,
                    ClassId = s.ClassId
                }).ToList()
            };
        }

        public ClassDto CreateClass(CreateClassDto dto)
        {
            var cls = new Classes
            {
                Name = dto.Name,
                Description = dto.Description
            };

            _classRepository.Add(cls);

            return GetClassById(cls.Id);
        }
    }
}
